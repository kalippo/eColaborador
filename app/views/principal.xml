<Alloy>
    <View class="container" layout="vertical">
        <View class="vistaTitulo fondoGris" id="vistaTitulo">
            <View class="vistaOpciones" id="vistaMenu">
                <Label class="fa colorAzul h5" id="iconoMenu"/>
            </View>
            <View id="vistaLogo">
                <ImageView id="titulo"/>
            </View>
            <View class="vistaOpciones" id="vistaPostales">
                <Label class="fa  h4 colorTurquesa" id="postales"/>
            </View>
        </View>
        <View id="vistaPrincipal">
            <ScrollView class="fondoGris" id="vistaPanel" showHorizontalScrollIndicator="false" showVerticalScrollIndicator="true">
                <View id="vistaCuentaRegresiva">
                    <Label class="etiquetaContador centrado fuenteRaleway h2" id="soloFaltan"/>
                    <Label class="etiquetaContador centrado fuenteRaleway h2" id="etiquetaSorteo"/>
                    <View id="vistaContador">
                        <View class="contador" id="vistaD">
                            <Label class="fuenteApp h4 etiquetaContador centrado" id="contadorDias"/>
                            <Label class="fuenteRaleway diahoraminuto etiquetaContador centrado h2" id="dias"/>
                        </View>
                        <Label class="fuenteApp h4" id="separador1"/>
                        <View class="contador" id="vistaH">
                            <Label class="fuenteApp h4 etiquetaContador" id="contadorHoras"/>
                            <Label class="fuenteRaleway diahoraminuto etiquetaContador centrado h2" id="horas"/>
                        </View>
                        <Label class="fuenteApp h4 etiquetaContador" id="separador2"/>
                        <View class="contador" id="vistaM">
                            <Label class="fuenteApp h4 etiquetaContador" id="contadorMinutos"/>
                            <Label class="fuenteRaleway diahoraminuto etiquetaContador centrado h2" id="minutos"/>
                        </View>
                        <Label class="fuenteApp h4 etiquetaContador" id="separador3"/>
                        <View class="contador" id="vistaS">
                            <Label class="fuenteApp h4 etiquetaContador" id="contadorSegundos"/>
                            <Label class="fuenteRaleway diahoraminuto etiquetaContador centrado h2" id="segundos"/>
                        </View>
                    </View>
                    <View id="vistaDiasHorasMinutos"/>
                </View>
                <View id="vistaCalendario">
                    <ImageView class="centrado" id="iconoCalendario"/>
                    <Label class="fuenteApp" id="Label_1"/>
                </View>
                <ImageView class="imagenOpciones" id="imagenMisClientes"/>
                <ImageView class="imagenOpciones" id="imagenSorteosHerramientas"/>
                <ImageView class="imagenOpciones" id="imagenEstadoCuenta"/>
                <ImageView class="imagenOpciones" id="imagenConsultaGanadores"/>
                <ImageView class="imagenOpciones" id="imagenCobroMovil"/>
            </ScrollView>
        </View>
    </View>
</Alloy>
