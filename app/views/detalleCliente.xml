                    <Label class="etiquetasDetalle h3 fuenteApp" id="tituloAbonos"/>
                    <Label class="fa h4 derecha " id="Label_2"/>
                </View>
                <Label class="h2 fuenteApp centrado colorGris" id="Label_3"/>
            </View>
            <View class="panelDetalles" id="vistaNotas">
                <View id="tituloAbonos">
                    <Label class="etiquetasDetalle fuenteApp" id="tituloNotas"/>
                </View>
            </View>
            <Label class="contenidoDetalle" id="ultimaActualizacion"/>
            <Button class="eliminarContacto fuenteApp" id="eliminarContacto "/>
