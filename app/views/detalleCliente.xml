<Alloy>
    <Window class="container" layout="vertical">
        <View class="vistaTitulo" id="vistaTitulo">
            <Label class="fa h5 regresar" id="regresar"/>
            <Label class="etiquetaTitulo fuenteApp h5 centrado" id="titulo"/>
            <Label class="fa h4 derecha" id="buscar"/>
        </View>
        <ScrollView class="fondoGris" id="vistaDetalleCliente">
            <View class="panelDetalles" id="vistaDatosContacto">
                <ImageView class="imagenColaborador" id="fotoCliente"/>
                <Label class="fuenteApp h2" id="nombreCliente"/>
                <Label class="fuenteApp h2" id="telefonoCliente"/>
                <View id="View_1">
                    <Label class="fa h4" id="whatsapp"/>
                </View>
            </View>
            <View class="panelDetalles" id="vistaEstatusPago">
                <Label class="etiquetasDetalle h3 fuenteApp" id="estatusDePago"/>
                <View class="fuenteApp h2" id="vistaEstatus">
                    <Label class="fuenteApp" id="estatus"/>
                </View>
            </View>
            <View class="panelDetalles" id="vistaBoletosEntregados">
                <View id="vistaTituloPanel">
                    <Label class="etiquetasDetalle h3 fuenteApp" id="boletosEntregados"/>
                    <Label class="fa h5 derecha fuenteApp" id="seleccionarBoletos"/>
                </View>
                <View id="vistaCantidadBoletos" layout="horizontal">
                    <Label class="contenidoDetalle fuenteApp" id="cantidadBoletos"/>
                    <Label class="contenidoDetalle fuenteApp h2" id="boletos"/>
                </View>
                <Label class="etiquetasDetalle h3 fuenteApp" id="sorteos"/>
                <ScrollView id="vistaBoletosAsignados"/>
            </View>
            <View class="panelDetalles" id="vistaDeudaPagos">
                <View id="pendiente">
                    <Label class="fuenteApp h3" id="titulopagoPendiente"/>
                    <Label class="fa h4 colorTurquesa derecha" id="saldarDeuda"/>
                    <Label class="fuenteApp h4" id="pagoPendiente"/>
                    <Label class="fuenteApp h4" id="Label_1"/>
                </View>
                <View id="vistaAbonos">
                    <Button class="h2 fuenteApp" id="agregarPago"/>
                    <Label class="h2 fuenteApp derecha" id="historial"/>
                    <View id="View_2"/>
                </View>
            </View>
            <View class="panelDetalles" id="vistaNotas">
                <View id="tituloAbonos">
                    <Label class="etiquetasDetalle fuenteApp" id="tituloNotas"/>
                </View>
                <TextArea id="notas"/>
            </View>
            <View height="50" layout="vertical" top="20">
                <Button class="h2 fuenteApp" id="eliminarContacto"/>
            </View>
            <Label class="contenidoDetalle h2" id="ultimaActualizacion"/>
        </ScrollView>
    </Window>
</Alloy>
